<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PeopleHrOrgChart.Views.OrgTree">
  <TreeDataGrid Margin="0 0 0 0"
                HorizontalAlignment="Stretch"
                Name="PersonTable">
    <TreeDataGrid.Styles>
      <Style Selector="TreeDataGrid">
        <Setter Property="Background" Value="{DynamicResource TableRow_Background-Primary}" />
      </Style>
      <Style Selector="TreeDataGridRow:nth-child(even)">
        <Setter Property="Background" Value="{DynamicResource TableRow_Background-Secondary}" />
      </Style>
    </TreeDataGrid.Styles>
  </TreeDataGrid>
</UserControl>
